<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stocksystem.OrderShow.CancelOrderListActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="finishThis"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/buttoncancel_logo_default"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingLeft="60dp"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:text="撤单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/cancel_order_list_tvUser"
                android:text="(未登录)"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>
            <TableLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>

                    <TextView
                        android:layout_column="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="委托时间"
                        android:textColor="#7F7F7F"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>
            <TableLayout>
                <TableRow android:paddingLeft="20dp">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:textSize="20sp"
                        android:textColor="#7F7F7F"
                        android:text="委托价"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:paddingLeft="20dp"
                        android:layout_gravity="center"
                        android:text="委托量"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>
            </TableLayout>
            <TableLayout android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                >
                <TextView
                    android:textColor="#7F7F7F"
                    android:text="状态"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableLayout>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:background="@color/colorWhite"
            android:id="@+id/cancel_orderList_lv_ShowTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
    <ImageView
        android:id="@+id/cancel_orderList_imgView_bg"
        android:src="@drawable/no_cancel_order"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
</LinearLayout>
