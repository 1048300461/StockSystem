<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <com.example.stocksystem.OrderShow.CircleImageView
            android:id="@+id/ordersList_circleImageView_userPhoto"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_centerInParent="true"
            android:src="@drawable/nologin_person"/>
        <TextView
            android:id="@+id/ordersList_textView_userName"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交时间"
            android:textColor="#7F7F7F"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/second_tv"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#7F7F7F"
            android:text="成交价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/first_tv"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/third_tv"
            android:layout_gravity="center"
            android:text="成交量"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/second_tv"
            android:paddingRight="5dp"
            android:paddingLeft="15dp"/>

        <TextView
            android:textColor="#7F7F7F"
            android:text="成交额"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/third_tv"
            android:paddingRight="5dp"
            android:paddingLeft="15dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/orderList_listView_ShowTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

        </ListView>
    </LinearLayout>
</LinearLayout>
