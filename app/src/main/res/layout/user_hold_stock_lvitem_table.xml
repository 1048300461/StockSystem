<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

       <LinearLayout
           android:paddingRight="10dp"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/userhs_lvItem_tvStockName"
               android:text="股票名称"
               android:textColor="@color/UserHoldAdd"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:layout_gravity="center"
               android:id="@+id/userhs_lvItem_tvStock"
               android:textColor="@color/UserHoldAdd"
               android:textSize="20sp"
               android:text="2000.00"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/userhs_lvItem_tvAddSub"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/UserHoldAdd"
                android:text="6500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/userhs_lvItem_tvAddSubPre"
                android:textSize="20sp"
                android:textColor="@color/UserHoldAdd"
                android:text="0.309%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/userhs_lvItem_tvHold"
            android:layout_gravity="center"
            android:text="6300"
            android:textSize="20sp"
            android:textColor="@color/UserHoldAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

       <LinearLayout
           android:paddingLeft="10dp"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/userhs_lvItem_tvPrice"
               android:textColor="@color/UserHoldAdd"
               android:text="5.772"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/userhs_lvItem_tvPriceNow"
               android:textColor="@color/UserHoldAdd"
               android:text="2320.00"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>

    </LinearLayout>

